<!-- New Product Start -->
<div class="section pb-100px" data-aos="fade-up" data-aos-delay="200">
    <div class="container">
        <!-- section title start -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title text-left mb-11">
                    <h2 class="title">You Might Also Like</h2>
                </div>
            </div>
        </div>
        <!-- section title start -->
        <div class="new-product-slider swiper-container slider-nav-style-1" data-aos="fade-up" data-aos-delay="200">
            <div class="new-product-wrapper swiper-wrapper">
                <!-- Single Prodect -->
                @foreach (var item in Model.FeaturedProduct)
                {
                    <div class="new-product-item swiper-slide">
                        <div class="product">
                            <div class="thumb">
                                <a href="/productscontroller1/detail/@item.ID" class="image">
                                    <img src="~/@item.ProductPicture[0].Picture.URL" alt="Product" />
                                    <img class="hover-image" src="~/@item.ProductPicture[1].Picture.URL" alt="Product" />
                                </a>

                                <span class="badges">
                                    @if (item.Discount != null)
                                    {
                                        <span class="sale">@((100-((item.Discount*100)/item.Price)).Value.ToString("0")) %</span>

                                    }
                                    @if (item.isNew == true)
                                    {
                                        <span class="new">New</span>
                                    }
                                </span>
                                <div class="actions">
                                    <a href="wishlist.html" class="action wishlist" title="Wishlist">
                                        <i class="icon-heart"></i>
                                    </a>
                                    <a href="#" class="action quickview" data-link-action="quickview" title="Quick view" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        <i class="icon-size-fullscreen"></i>
                                    </a>
                                    <a href="compare.html" class="action compare" title="Compare">
                                        <i class="icon-refresh"></i>
                                    </a>
                                </div>
                                <button title="Add To Cart" murad="@item.ID" class="add-to-cart">
                                    Add
                                    To Cart
                                </button>
                            </div>
                            <div class="content">
                                <h5 class="title"><a href="~/productcontroller1/@item.ID">@item.Name</a></h5>
                                <span class="price">
                                    <span class="new">@item.Price</span>
                                    <span class="old">@item.Discount</span>
                                </span>
                            </div>
                        </div>
                    </div>
                }
                <!-- Single Prodect -->
            </div>
            <!-- Add Arrows -->
            <div class="swiper-buttons">
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </div>
    </div>
</div>

<!-- New Product End -->
